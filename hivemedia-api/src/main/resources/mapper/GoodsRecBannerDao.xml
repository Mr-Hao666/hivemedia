<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.hivemedia.dao.GoodsRecBannerDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="cn.hivemedia.entity.GoodsRecBannerEntity" id="goodsRecBannerMap">
        <result property="id" column="id"/>
        <result property="tabId" column="tab_id"/>
        <result property="picId" column="pic_id"/>
        <result property="desc" column="desc"/>
        <result property="url" column="url"/>
        <result property="sortNo" column="sort_no"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="delFlag" column="del_flag"/>
    </resultMap>

    <select id="getList" resultType="cn.hivemedia.entity.GoodsRecBannerEntity" parameterType="java.lang.Integer">
        select b.id,b.tab_id tabId,b.pic_id picId,b.desc ,b.url,b.sort_no sortNo,o.url picUrl
        from tb_goods_rec_banner b,sys_oss o
        where b.pic_id = o.id and b.del_flag = 0
        <if test="size!=null and size>0">
            limit 0,#{size}
        </if>
    </select>


</mapper>