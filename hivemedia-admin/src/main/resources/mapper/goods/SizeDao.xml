<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.hivemedia.modules.goods.dao.SizeDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="cn.hivemedia.modules.goods.entity.SizeEntity" id="sizeMap">
        <result property="id" column="id"/>
        <result property="desc" column="desc"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="delFlag" column="del_flag"/>
    </resultMap>
    <select id="querySizeVoList" resultType="cn.hivemedia.modules.goods.vo.SizeVo">
        select
        s.id,
        s.`desc`,
        (select d.value FROM sys_dict d where d.code = s.goods_tab and d.type='goodsTab') as goods_tab,
        s.create_time,
        s.update_time
        FROM tb_size s
        WHERE 1=1
        <if test="goodsTab != null">
            AND s.goods_tab = #{goodsTab}
        </if>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
            <otherwise>
                order by s.`desc`
            </otherwise>
        </choose>
        <if test="offset != null and limit != null">
            limit #{offset}, #{limit}
        </if>
    </select>

    <select id="querySizeVo" resultType="cn.hivemedia.modules.goods.vo.SizeVo">
        select
         s.id,
        s.`desc`,
        s.goods_tab
        FROM tb_size s
        where s.id = #{id}
    </select>

    <select id="queryTotal" resultType="java.lang.Integer">
        select count(1) from tb_size s
    </select>

</mapper>