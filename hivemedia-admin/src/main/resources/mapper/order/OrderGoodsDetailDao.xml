<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.hivemedia.modules.order.dao.OrderGoodsDetailDao">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="cn.hivemedia.modules.order.entity.OrderGoodsDetailEntity" id="orderGoodsDetailMap">
        <result property="id" column="id"/>
        <result property="orderId" column="order_id"/>
        <result property="goodsId" column="goods_id"/>
        <result property="goodsName" column="goods_name"/>
        <result property="desc" column="desc"/>
        <result property="goodsPrice" column="goods_price"/>
        <result property="orderType" column="order_type"/>
        <result property="number" column="number"/>
        <result property="subtotal" column="subtotal"/>
        <result property="createdTime" column="created_time"/>
        <result property="updatedTime" column="updated_time"/>
    </resultMap>

    <select id="selectByOrderId" resultMap="orderGoodsDetailMap">
        select id,order_id,goods_id,goods_name,`desc`,goods_price
        from tb_order_goods_detail
        where order_id = #{orderId} and order_type = #{orderType}
    </select>


</mapper>